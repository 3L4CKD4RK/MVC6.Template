@model ModuleModel
@@model @Model.View

<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-title">
            <span class="widget-title-icon fa fa-th-list"></span>
            <h5>@@Headers.@Model.HeaderTitle</h5>
            <div class="widget-title-buttons">
                <authorize action="Edit">
                    <a asp-action="Edit" asp-route-id="@@Model.Id" class="btn">
                        <i class="fa fa-pencil"></i><span class="text">@@Actions.Edit</span>
                    </a>
                </authorize>
                <authorize action="Delete">
                    <a asp-action="Delete" asp-route-id="@@Model.Id" class="btn">
                        <i class="fa fa-times"></i><span class="text">@@Actions.Delete</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            @foreach (PropertyInfo property in Model.Properties)
            {
            <div class="form-group">
                <div class="control-label col-sm-12 col-md-3 col-lg-2">
                    <label for="@property.Name"></label>
                </div>
                <div class="control-content col-sm-12 col-md-9 col-lg-5">
                    @if (typeof(DateTime?).IsAssignableFrom(property.PropertyType))
                    {
                    <input asp-for="@property.Name" class="form-control" asp-format="{0:d}" autocomplete="off" />
                    }
                    else
                    {
                    <input asp-for="@property.Name" class="form-control" autocomplete="off" />
                    }
                </div>
            </div>
            }
        </div>
    </div>
</div>
