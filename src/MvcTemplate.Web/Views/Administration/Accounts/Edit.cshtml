@model AccountEditView

<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-title">
            <span class="widget-title-icon fa fa-th-list"></span>
            <h5>@Headers.AdministrationAccounts</h5>
            <div class="widget-title-buttons">
                <authorize action="Details">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn">
                        <i class="fa fa-info"></i><span class="text">@Actions.Details</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label for="Username"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="Username" class="form-control" readonly="readonly" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label for="Email"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="Email" class="form-control" readonly="readonly" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label for="IsLocked"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="IsLocked" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="IsLocked"></span>
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label for="RoleId"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="RoleId" class="form-control" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="RoleId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-sm-12 col-lg-7">
                        <input class="btn btn-primary" type="submit" value="@Actions.Submit" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
