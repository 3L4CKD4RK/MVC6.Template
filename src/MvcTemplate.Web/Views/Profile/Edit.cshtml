@model ProfileEditView

<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-title">
            <span class="widget-title-icon fa fa-th-list"></span>
            <h5>@Headers.ProfileEdit</h5>
            <div class="widget-title-buttons">
                <authorize comp-action="Delete">
                    <a asp-action="Delete" class="btn">
                        <i class="fa fa-times"></i><span class="text">@Actions.Delete</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label comp-for="Username"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="Username" class="form-control" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label comp-for="Password"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label comp-for="NewPassword"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="NewPassword" class="form-control" type="password" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-12 col-md-3 col-lg-2">
                        <label comp-for="Email"></label>
                    </div>
                    <div class="control-content col-sm-12 col-md-9 col-lg-5">
                        <input asp-for="Email" class="form-control" autocomplete="off" />
                    </div>
                    <div class="control-validation col-sm-12 col-lg-5">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-sm-12 col-lg-7">
                        <input class="btn btn-primary" type="submit" value="@Actions.Submit" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
